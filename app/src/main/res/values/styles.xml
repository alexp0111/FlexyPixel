<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GridLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:columnCount">3</item>
        <item name="android:rowCount">3</item>
        <item name="android:useDefaultMargins">true</item>
        <item name="android:layout_marginTop">@dimen/display_layout_top_margin</item>
    </style>

    <style name="display_holder">
        <item name="android:layout_width">@dimen/display_holder_size</item>
        <item name="android:layout_height">@dimen/display_holder_size</item>
        <item name="android:layout_marginTop">@dimen/display_holder_margin</item>
    </style>

    <style name="display_holder_image">
        <item name="android:layout_width">@dimen/display_holder_image_size</item>
        <item name="android:layout_height">@dimen/display_holder_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/display_holder_image_padding</item>
    </style>


    <style name="save_button">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/save_button_height</item>
        <item name="cardCornerRadius">@dimen/rv_bluetooth_item_corner_radius</item>
        <item name="android:layout_marginBottom">@dimen/save_button_bottom_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/level2_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="neumorph_shadowColorDark">@color/darker_beige</item>
        <item name="neumorph_shadowColorLight">@color/white_shadow</item>
    </style>


    <style name="neumorph_card_pressed">
        <item name="android:layout_width">@dimen/display_container_size</item>
        <item name="android:layout_height">@dimen/display_container_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="neumorph_inset">@dimen/display_container_inset</item>
        <item name="neumorph_shadowColorDark">@color/darker_beige</item>
        <item name="neumorph_shadowColorLight">@color/white_shadow</item>
        <item name="neumorph_shapeType">pressed</item>
    </style>


    <style name="neumorph_card_flat" parent="neumorph_card_pressed">
        <item name="neumorph_shapeType">flat</item>
        <item name="android:layout_width">@dimen/neumorph_card_size</item>
        <item name="android:layout_height">@dimen/neumorph_card_size</item>
        <item name="neumorph_inset">@dimen/neumorph_card_inset</item>
    </style>


    <style name="display_container_frame_layout">
        <item name="android:layout_width">@dimen/display_container_size</item>
        <item name="android:layout_height">@dimen/display_container_size</item>
    </style>

    <style name="Heading_TV" parent="Widget.Neumorph.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">@dimen/level1_text_size</item>
        <item name="android:layout_margin">@dimen/Heading_TV_margin</item>
    </style>

    <style name="Heading_ET" parent="Heading_TV">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="Subtitle_TV" parent="Widget.Neumorph.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">normal</item>

        <item name="android:textSize">@dimen/level2_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="rv_surface_item" parent="save_button">

        <item name="android:layout_width">@dimen/rv_bluetooth_item_width</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="neumorph_backgroundColor">@color/beige</item>
    </style>

    <style name="rv_deviceName" parent="Subtitle_TV">
        <item name="android:layout_width">@dimen/rv_device_name_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">0</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/beige</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">DEVICE #1</item>
        <item name="android:layout_marginStart">@dimen/rv_device_name_start_margin</item>
    </style>

    <style name="connection_indicator">
        <item name="android:layout_width">@dimen/rv_connection_indicator_size</item>
        <item name="android:layout_height">@dimen/rv_connection_indicator_size</item>
        <item name="neumorph_shapeType">pressed</item>
        <item name="neumorph_strokeColor">@color/white</item>
        <item name="android:layout_marginEnd">@dimen/rv_connection_indicator_end_margin</item>
    </style>


    <style name="menu_item">
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_shadowColorDark">@color/darker_beige</item>
        <item name="neumorph_shadowColorLight">@color/white_shadow</item>
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/menu_card_height</item>
    </style>

    <style name="menu_item.icon">
        <item name="android:layout_width">@dimen/menu_icon_size</item>
        <item name="android:layout_height">@dimen/menu_icon_size</item>
        <item name="android:layout_marginStart">@dimen/menu_icon_start_margin</item>
    </style>

    <style name="menu_item.linear_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="menu_item.text_upper" parent="Subtitle_TV">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_item.text_under" parent="menu_item.text_upper">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/level3_text_size</item>
    </style>


    <style name="paletteItem">
        <item name="cardCornerRadius">@dimen/palette_item_size</item>
        <item name="android:layout_width">@dimen/palette_item_size</item>
        <item name="android:layout_height">@dimen/palette_item_size</item>
        <item name="strokeColor">#D50000</item>
        <item name="strokeWidth">0dp</item>

        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>
    <style name="color_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/color_title_end_margin</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textSize">@dimen/level1_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Slider styles!-->
    <style name="SliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="android:layout_width">@dimen/slider_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="trackHeight">@dimen/slider_track_height</item>
        <item name="thumbColor">@color/black</item>
        <item name="thumbStrokeColor">@color/black</item>
        <item name="android:backgroundTint">@color/darker_beige</item>
        <item name="android:foregroundTint">@color/darker_beige</item>
        <item name="android:valueFrom">0</item>
        <item name="android:valueTo">9</item>
        <item name="android:stepSize">1</item>
        <item name="haloColor">@color/transparent</item>
        <item name="haloRadius">0dp</item>
        <item name="labelBehavior">withinBounds</item>
        <item name="labelStyle">@style/slider.labelStyle</item>
        <item name="tickVisible">false</item>
        <item name="tickColor">@color/white</item>
        <item name="trackColorActive">@color/black</item>
        <item name="trackColorInactive">@color/darker_beige</item>
    </style>

    <style name="slider.labelStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/slider.labelStyle.textStyle</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="slider.labelStyle.textStyle" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>
    <!-- Slider styles!-->

</resources>